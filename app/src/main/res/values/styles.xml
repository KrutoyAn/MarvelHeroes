<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="q">@color/windowBackground</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/windowLightStatusBar</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>
</resources>
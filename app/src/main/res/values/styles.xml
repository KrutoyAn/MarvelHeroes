<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="q">@color/windowBackground</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/windowLightStatusBar</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>


    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/round_button_green</item>
    </style>

    <style name="AppTheme.ButtonStyleAnim" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/round_button_red</item>
    </style>

    <style name="AppTheme.ButtonStyleBlock" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/round_button_red</item>
    </style>

    <!--load background
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/marvel</item>
    </style>
-->
</resources>
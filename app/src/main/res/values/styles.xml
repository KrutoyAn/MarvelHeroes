<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="q">@color/windowBackground</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/windowLightStatusBar</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>\
    </style>


    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:searchIcon">@color/white</item>
        <item name="android:searchHintIcon">@color/white</item>
    </style>

</resources>
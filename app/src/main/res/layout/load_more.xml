<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ProgressBar
    android:id="@+id/redProgressMore"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    style="?android:attr/progressBarStyleLarge"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/load_more_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/errorRetry"
        app:layout_constraintTop_toBottomOf="@id/redProgressMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <Button
        android:id="@id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:drawableEnd="@drawable/ic_baseline_autorenew_24"
        app:drawableTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/load_more_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>